<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="top">

    <LinearLayout
        android:id="@+id/buttonsLLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp">

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp">
        </Space>

        <Button
            android:id="@+id/btn_getCityID"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Get City ID"
            android:textSize="10sp">
        </Button>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp">
        </Space>

        <Button
            android:id="@+id/btn_getWeatherByCityID"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Get Weather By ID"
            android:textSize="10sp">
        </Button>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp">
        </Space>

        <Button
            android:id="@+id/btn_getWeatherByCityName"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Get Weather By Name"
            android:textSize="10sp">
        </Button>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp">
        </Space>

    </LinearLayout>

    <EditText
        android:layout_margin="10dp"
        android:id="@+id/et_dataInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City Name"
        android:inputType="text">
    </EditText>

    <ListView
        android:layout_margin="10dp"
        android:id="@+id/lv_weatherReports"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>